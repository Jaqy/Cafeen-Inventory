<!DOCTYPE html>


<html>
  <head>
    <title>@Page.title</title>
    <link href="~/Styles/Products.css" rel="stylesheet" type="text/css" />
    <meta charset="utf-8" />
     <style type="text/css">

    .field-validation-error {
      font-weight:bold;
      color:red;
      background-color:yellow;
     }
    .validation-summary-errors{
      border:2px dashed red;
      color:red;
      background-color:yellow;
      font-weight:bold;
      margin:12px;
    }
                 
     ul {
    list-style-type: none;
    margin: 0;
    width: 81.1%;
    padding: 0;
    overflow: hidden;
    background-color: #333;
    }

    li {
    float: left;
    border-right:1px solid #bbb;
    }

    li:last-child {
    border-right: none;
    }

    li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    }

    li a:hover:not(.active) {
    background-color: #111;
    }
    
    .active {
    background-color: #4CAF50;
    }
    </style>
  </head>
  <body>
    <div id="container">
        <div id="header">
         <h1>Cafeen's inventory</h1>
        </div>
        <ul>
                <li><a href="@Href("~/index")">Home</a></li>
                <li><a href="@Href("~/Members/Products")">Inventory List</a></li>
                <li><a href="@Href("~/Members/AddToDatabase")">Add new product</a></li>
                <li><a href="@Href("~/Members/Dailycount")">Daily count</a></li>
                <li><a href="@Href("~/Members/Contact")">Contact</a></li>
                @if(WebSecurity.IsAuthenticated){
                    <li style="float:right"><a href="@Href("~/logout")">Logout</a></li>
                }
                else{
                    <li style="float:right"><a href="@Href("~/login")">Login</a></li>
                }
        </ul>
        <!--style="float:right">-->
        <div id="main">
          @RenderBody()
        </div>
        <div id="footer">
          &copy; @DateTime.Now.Year Cafeen's inventory
        </div>
    </div>
  </body>
</html>

