@{
    Page.title = "Delete Product";
    <!--The lines below creates the variables to be used later-->
    var ProductName = "";
    var Category = "";
    double Price = 0.0;
    double PurchasePrice = 0.0;
    var ProductID = "";
    var Stock = 0.0;

    <!--When the button is not pressed, check the ID, open the database, check if rows are empty, display products -->
    if(!IsPost){
        if(!Request.QueryString["ID"].IsEmpty() && Request.QueryString["ID"].IsInt()){
            ProductID = Request.QueryString["ID"];
            var db = Database.Open("Cafeen");
            var dbCommand = "SELECT * FROM Products WHERE ID = @0";
            var rows = db.QuerySingle(dbCommand, ProductID);
            if(rows != null) {
                ProductName = rows.ProductName;
                Category = rows.Category;
                Price = rows.Price;
                PurchasePrice = rows.PurchasePrice;
                Stock = rows.Stock;
            }
            else{
                Validation.AddFormError("No Product was found for that ID.");
            }
        }
        else{
            Validation.AddFormError("No Product was selected.");
        }
    }<!--The delete request has the name buttondelete so that it doesn't conflict with other buttons on the page, IMPORTANT if you leave out the where command
      you will instead delete the whole database-->
        if(IsPost && !Request["buttonDelete"].IsEmpty()){
        ProductID = Request.Form["ProductID"];
        Funcs.DeleteProduct(ProductID);
        @*
        var db = Database.Open("Cafeen");
        var deleteCommand = "DELETE FROM Products WHERE ID = @0";
        db.Execute(deleteCommand, ProductID);*@
        Response.Redirect("~/Members/Products");
    }
}

      <h1>Delete a Product</h1>
      <!--Creates the tables for the information to be inserted-->
      <form method="post">
        <fieldset>
        <legend>Product Information</legend>

        <p><span>ProductName:</span>
         <span>@ProductName</span></p>

        <p><span>Category:</span>
         <span>@Category</span></p>

        <p><span>Price:</span>
          <span>@Price</span></p>

        <p><span>PurchasePrice:</span>
          <span>@PurchasePrice</span></p>

        <p><span>Stock:</span>
          <span>@Stock</span></p>
            <!--Creates the hidden ProductID to be used when deleting an object, and creates the button to delete -->
        <input type="hidden" name="ProductID" value="@ProductID" />
        <p><input type="submit" name="buttonDelete" value="Delete Product" /></p>
        </fieldset>
      </form>
      <!--Creates the return to product listigs link-->
         <p>
            <a href="~/Members/Products">Return to Product listings</a>
         </p>