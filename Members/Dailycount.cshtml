@{
    Page.title = "Storage counting"; 

    var db = Database.Open("Cafeen") ;
    var selectCommand = "SELECT * FROM DailyCountTable";
    var searchTerm = "";
    
    var selectedData = db.Query(selectCommand, searchTerm);
    var grid = new WebGrid(source: selectedData, defaultSort: "Category", rowsPerPage:60);

}


    <div>
        @grid.GetHtml(
            tableStyle: "grid",
            headerStyle: "head",
            alternatingRowStyle: "alt",
            columns: grid.Columns(
                grid.Column("ProductName"),
                grid.Column("LastCount"),
                grid.Column("TodaysCount"),
                grid.Column("Difference")
            )
        )
    </div>